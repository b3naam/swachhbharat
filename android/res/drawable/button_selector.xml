<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selected -->
    <item android:state_pressed="true"><shape>
            <gradient android:angle="360" android:endColor="#CCCCCC" android:startColor="#CCCCCC" />

            <stroke android:width="0dp" android:color="#CCCCCC" />

            <corners android:radius="0dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="360" android:endColor="#EEEEEE" android:startColor="#EEEEEE" />

            <stroke android:width="0dp" android:color="#EEEEEE" />

            <corners android:radius="0dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

</selector>